{
  "name": "express-ts-api-boilerplate",
  "version": "1.0.0",
  "scripts": {
    "dev": "nodemon",
    "prod": "rm -rf dist && tsc && nodemon dist/index.js"
  },
  "author": "https://github.com/sunhak-hout",
  "repository": "https://github.com/sunhak-hout/express-ts-api-boilerplate",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.5",
    "@types/express": "^4.17.0",
    "nodemon": "^1.19.1",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node -r dotenv/config src/index.ts"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  }
}
